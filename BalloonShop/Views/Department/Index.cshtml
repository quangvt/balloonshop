@model IEnumerable<BalloonShop.Domain.Entities.Department>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "All Departments";
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <h3>All Departments</h3>
    </div>
    <div class="panel panel-body">
        <table class="table table-bordered table-hover">
            @if (Model != null)
            {
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                foreach (var dept in Model)
                {
                    <tr>
                        <td class="col-sm-2">@dept.DepartmentId</td>
                        <td class="col-sm-3">
                            @Html.ActionLink(@dept.Name, "Edit", new { @dept.DepartmentId })
                        </td>
                        <td class="col-sm-5">@dept.Description</td>
                        <td class="cold-sm-2">
                            @using (Html.BeginForm("Delete", "Department"))
                            {
                                @Html.Hidden("DepartmentId", @dept.DepartmentId)
                                <input type="submit"
                                        class="btn btn-default btn-xs"
                                        value="Delete" />
                            }
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="panel panel-footer">
        @Html.ActionLink("Add a new department", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>